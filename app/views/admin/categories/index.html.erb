<header class="page-header">
    <h1>Admin &raquo; All categories</h1>
</header>

<%= link_to "+  New Category", [:new, :admin, :category], class: "btn btn-primary" %>
<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>
                Categories
            </th>
        </tr>
    </thead>
    <tbody>
        <% @categories.each do |category| %>
        <tr>
            <td>
                <%= category.name %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>